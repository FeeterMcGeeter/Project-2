            <input type="text" id="icon_prefix" class="validate emailSignUp">
            <label for="icon_prefix">Email Address</label>
          </div>
          <div class="input-field col">
            <i class="material-icons prefix">lock</i>
            <input type="text" id="icon_prefix" class="validate passwordSignUp">
            <label for="icon_prefix">Password</label>
          </div>
        </form>
        <a class="waves-effect waves-light btn-large" id="logIn">Sign Up</a>
